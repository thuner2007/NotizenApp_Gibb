<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="NotizenApp.MainPage"
    BackgroundColor="{StaticResource Background}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Search Bar -->
        <SearchBar x:Name="SearchBar"
                   Grid.Row="0"
                   Grid.Column="0"
                   Placeholder="Search a note..."
                   BackgroundColor="{StaticResource Primary}"
                   TextColor="White"
                   PlaceholderColor="White"
                   HeightRequest="40" />

        <!-- Welcome Label -->
        <Label x:Name="WelcomeLabel"
               Grid.Row="0"
               Grid.Column="1"
               Text="Hello, {Name}"
               FontSize="32"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Margin="0,0,0,20" />

        <!-- Last Edited History Panel -->
        <StackLayout Grid.Row="1"
                     Grid.Column="0"
                     Padding="10">
            <Label Text="Last Edited"
                   FontSize="24"
                   FontAttributes="Bold"
                   Margin="0,0,0,10" />
            <!-- Add your last edited notes here -->
        </StackLayout>

        <!-- Notes Collection -->
        <CollectionView Grid.Row="1"
                        Grid.Column="1"
                        x:Name="NotesCollection"
                        SelectionMode="Single"
                        SelectionChanged="OnNoteSelected">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                 Span="3"
                                 VerticalItemSpacing="10"
                                 HorizontalItemSpacing="10" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="{StaticResource DarkBlue}"
                           CornerRadius="10"
                           Padding="15"
                           HeightRequest="150"
                           WidthRequest="150">
                        <StackLayout>
                            <Label Text="{Binding Title}"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}" />
                            <Label Text="{Binding Content}"
                                   FontSize="14"
                                   TextColor="{StaticResource TextPrimary}"
                                   LineBreakMode="TailTruncation"
                                   MaxLines="2" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
